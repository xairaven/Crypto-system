<Page x:Class="Lab1.View.CaesarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Lab1.View"
      mc:Ignorable="d"
      Title="CaesarPage" Height="70" Width="280">
    <DockPanel>
        <Label HorizontalAlignment="Center" FontWeight="SemiBold" DockPanel.Dock="Top" Content="Key:"/>
        <TextBox DockPanel.Dock="Bottom"
                 x:Name="KeyBox"
                 MinWidth="230"  
                 Margin="5"
                 PreviewTextInput="NumericOnly"
                 VerticalContentAlignment="Center"/>
    </DockPanel>
</Page>
